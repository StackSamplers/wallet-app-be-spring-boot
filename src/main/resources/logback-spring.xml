<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--    config and environment variables-->
    <springProperty scope="context" name="springAppName" source="spring.application.name" defaultValue="application"/>
    <!-- Environment variables with fallback values -->
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>

    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [${springAppName}] [%X{traceId:-No-Trace}] %yellow([%thread]) %cyan(%logger{36}) [%file:%line] - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>